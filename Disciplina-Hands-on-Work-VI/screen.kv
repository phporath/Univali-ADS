ScreenManager:
    LoginScreen:
    MenuScreen:
    NovaOcorrenciaScreen:
    StatusScreen:

<LoginScreen>:
    name: "login"

    MDLabel:
        id: lb_login
        text: "Bem vindo ao GVP"
        font_size: 24
        theme_text_color:'Custom'
        text_color:(236/255.0, 98/255.0, 81/255.0, 1)
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    MDTextField:
        id: user
        hint_text: "Enter username"
        icon_right: "account"
        icon_right_color: app.theme_cls.primary_color
        size_hint_x: None
        width: 200
        font_size:18
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDTextField:
        id: password
        hint_text: "Enter password"
        icon_right: "eye-off"
        icon_right_color: app.theme_cls.primary_color
        size_hint_x: None
        width: 200
        font_size:18
        password: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDRectangleFlatButton:
        text: "LOG IN"
        font_size: 12
        on_press:
            root.manager.current = 'menu'
            root.manager.transition.direction = "left"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

    MDRectangleFlatButton:
        text: "CLEAR"
        font_size: 12
        on_press: app.clear()
        pos_hint: {"center_x": 0.5, "center_y": 0.2}

    Widget:
        size_hint_y: None
        height: 10

<MenuScreen>:
    name: "menu"

    MDLabel:
        id: lb_menu
        text: "Menu"
        font_size: 24
        theme_text_color:'Custom'
        text_color:(236/255.0, 98/255.0, 81/255.0, 1)
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    MDIconButton:
        icon: 'logout'
        theme_text_color:'Secondary'
        on_press:
            root.manager.current = 'login'
            root.manager.transition.direction = "right"
        pos_hint: {"center_x": 0.9, "center_y": 0.8}

    MDRectangleFlatButton:
        text: 'Nova Ocorrência'
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        on_press:
            root.manager.current = 'novaOcorrencia'
            root.manager.transition.direction = "left"

    MDRectangleFlatButton:
        text: 'Status'
        pos_hint: {'center_x':0.5, 'center_y':0.4}
        size_hint: None, None
        on_press:
            root.manager.current = 'status'
            root.manager.transition.direction = "left"

<NovaOcorrenciaScreen>:
    name: "novaOcorrencia"

    MDLabel:
        id: lb_nova_ocorrencia
        text: "Novo Registro"
        pos_hint: {'center_x':0.5, 'center_y':0.8}
        font_size: 24
        theme_text_color:'Custom'
        text_color:(236/255.0, 98/255.0, 81/255.0, 1)
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 15

    MDLabel:
        id: lb_np
        text: "Natureza do Problema"
        font_size: 16
        theme_text_color:'Custom'
        text_color:(1, 1, 1, 1)
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDDropDownItem:
        id: drop_item
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        text: 'Ocorrência'
        on_release: self.set_item("New Item")

    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        on_press:
            root.manager.current = 'menu'
            root.manager.transition.direction = "right"

<StatusScreen>:
    name: "status"

    MDLabel:
        id: lb_status
        text: "Status"
        pos_hint: {'center_x':0.5, 'center_y':0.8}
        font_size: 24
        theme_text_color:'Custom'
        text_color:(236/255.0, 98/255.0, 81/255.0, 1)
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 15

    MDLabel:
        id: lb_np
        text: "Natureza do Problema"
        font_size: 16
        theme_text_color:'Custom'
        text_color:(1, 1, 1, 1)
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDDropDownItem:
        id: drop_item
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        text: 'Ocorrência'
        on_release: self.set_item("New Item")

    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        on_press:
            root.manager.current = 'menu'
            root.manager.transition.direction = "right"